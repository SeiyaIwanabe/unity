.ChatSpace
  %h4.rooms-title 気になる同士
  -# - @deals.each do |d|
  -#   .user-name
  -#     %strong
  -#       = image_tag d.user.image.url, class:"user-image"
  -#       %a.rooms-user-link{:href => "/users/#{d.user.id}"}
  -#         = d.user.name
  -#         さん
  %hr/

  .chats
    .posts
      = form_for @message do |f|
        = f.text_field :message, required: "required", placeholder: "メッセージを入力して下さい" , size: 100, class:"form-text-field"
        = f.hidden_field :room_id, value: @room.id
        = f.submit "送信する", class: 'form-submit'
        
    .chat
      - if @messages.present?
        - @messages.each do |m|
          .chat-box
            .chat-face
              = image_tag m.user.image.url, class:"user-image"
            .chat-hukidashi
              = m.message
              %br/
              = m.user.name
              %br/
              = m.created_at.strftime("%Y-%m-%d %H:%M")
