.Adjust
  .Adjust--FormBox
    %section.EditHeading
      %h1.title
        Profile Edit
    %section.UserDetails__field
      = form_with(model: @user, local: true, class: :EditForm) do |f|

        .UserImage 
          - if @user.image?
            = f.label :image, class: 'UserImage__icon' do
              = image_tag @user.image.url, class: "UserImage__icon "
              -# = icon("fa", "image", class: "TouchHere")
              = f.file_field :image, class: 'Hidden'

          - else
            = f.label :image, class: 'UserImage__default' do
              = image_tag asset_path 'No-image.png', class: "NoImage__icon"
              = f.file_field :image, class: 'Hidden'
        
        .UserNameEdit
          %p 名前：
          = f.label class: 'Username' do
            = f.text_field :name, placeholder: "name", class: "text_field"
              
        
        .UserEmailEdit
          %p メールアドレス：
          = f.label class: 'Useremail' do
            = f.text_field :email, placeholder: "email", class: "text_field"

        .UserSkillEdit
          %p 特技：
          = f.label class: 'Userskill' do
            = f.text_field :genre, placeholder: "skill", class: "text_field"
        
        .UserIntroductionEdit
          %p 自己紹介文：
          = f.label class: 'Userintroduction' do
            = f.text_area :introduction, placeholder: "紹介文", class: "text_area"
        
        .SubmitArea
          = f.submit 'プロフィールを更新', class: 'SubmitArea__btn' 
